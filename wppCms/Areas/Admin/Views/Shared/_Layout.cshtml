<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OmniCon Admin by SEVENTH</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">

    <!-- Font Awsome-->
    @if (ViewData["FontAwsome"] != null)
    {
        <script src="@ViewData["FontAwsome"]" crossorigin="anonymous"></script>
    }

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/side-nav.css" asp-append-version="true" />
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar" class="bg-dark">
            <div class="sidebar-header text-center">
                <h3 class="logo nav-logo">
                    OmniCon Admin
                </h3>
                <strong class="logo nav-logo" style="font-size:1.2em;">
                    Admin
                </strong>
            </div>
            <ul class="list-unstyled components">
                <li class="active">
                    <a href="#dashboardSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <span class="material-icons">dashboard</span>
                        <span class="nav-label-text">Dashboard</span>
                    </a>
                    <ul class="collapse list-unstyled" id="dashboardSubmenu">
                        <li>
                            <a href="/admin/dashboard">
                                <span class="material-icons">analytics</span>
                                <span class="nav-label-text">Overview</span>
                            </a>
                        </li>
                        <li>
                            <a href="/admin/users">
                                <span class="material-icons">people</span>
                                <span class="nav-label-text">Users</span>
                            </a>
                        </li>
                        <li>
                            <a href="/admin/articles">
                                <span class="material-icons">article</span>
                                <span class="nav-label-text">Articles</span>
                            </a>
                        </li>
                        <li>
                            <a href="/admin/authors">
                                <span class="material-icons">person</span>
                                <span class="nav-label-text">Authors</span>
                            </a>
                        </li>
                    </ul>
                </li>

                <li>
                    <a href="/admin/files">
                        <span class="material-icons">folder</span>
                        <span class="nav-label-text">Files</span>
                    </a>
                </li>

                <li>
                    <a href="/admin/settings">
                        <span class="material-icons">settings</span>
                        <span class="nav-label-text">Settings</span>
                    </a>
                </li>
                
                <!-- Logout Option -->
                <li>
                    <form action="/identity/account/logout" asp-controller="Account" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-link nav-link text-light">
                            <span class="material-icons">logout</span>
                            <span class="nav-label-text">Logout</span>
                        </button>
                    </form>
                </li>
            </ul>
        </nav>

        <!-- Page Content -->
        <div id="content">
            <main role="main">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.3.min.js" integrity="sha256-pvPw+upLPUjgMXY0G+8O0xUf+/Im1MZjXxxgOcBQBXU=" crossorigin="anonymous"></script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
 
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
