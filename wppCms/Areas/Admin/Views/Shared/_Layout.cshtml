<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OmniCon Admin by SEVENTH</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">

    <!-- Font Awsome-->
    @if (ViewData["FontAwsome"] != null)
    {
        <script src="@ViewData["FontAwsome"]" crossorigin="anonymous"></script>
    }

    @if (ViewData["Culture"] == null)
    {
        ViewData["Culture"] = "en";
    }


    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/side-nav.css" asp-append-version="true" />
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar" class="bg-dark">
            <div class="sidebar-header text-center">
                <a href="/@ViewData["Culture"]/admin" class="text-decoration-none text-white">
                    <h3 class="logo nav-logo">
                        OmniCon Admin
                    </h3>
                    <strong class="logo nav-logo" style="font-size:1.2em;">
                        Admin
                    </strong>
                </a>
            </div>
            <ul class="list-unstyled components">
                <li class="active">
                    <a href="#dashboardSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="fa-solid fa-gauge fa-fw"></i> Dashboard
                    </a>
                    <ul class="collapse list-unstyled" id="dashboardSubmenu">
                        <li>
                            <a href="/admin/dashboard">
                                <i class="fa-solid fa-chart-mixed fa-fw"></i> Overview
                            </a>
                        </li>
                        <li>
                            <a href="/admin/users">
                                <i class="fa-solid fa-users fa-fw"></i> Users
                            </a>
                        </li>
                        <li>
                            <a href="/admin/articles">
                                <i class="fa-solid fa-newspaper fa-fw"></i> Articles
                            </a>
                        </li>
                        <li>
                            <a href="/admin/authors">
                                <i class="fa-solid fa-pen-nib fa-fw"></i> Authors
                            </a>
                        </li>
                    </ul>
                </li>

                <li>
                    <a href="/admin/files">
                        <i class="fa-solid fa-file fa-fw"></i>
                        Files
                    </a>
                </li>

                <li>
                    <a href="/admin/settings">
                        <i class="fa-solid fa-gear fa-fw"></i> Settings
                    </a>
                </li>


            </ul>
           
            <!-- Logout Option -->
            <div class="mt-5 px-2 mx-1">
                <form action="/identity/account/logout" asp-controller="Account" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-link nav-link">
                        <i class="fa-solid fa-arrow-up-left-from-circle fa-fw"></i> Logout
                    </button>
                </form>
            </div>
           

        </nav>

        <!-- Page Content -->
        <div id="content">
            <main role="main">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.3.min.js" integrity="sha256-pvPw+upLPUjgMXY0G+8O0xUf+/Im1MZjXxxgOcBQBXU=" crossorigin="anonymous"></script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
