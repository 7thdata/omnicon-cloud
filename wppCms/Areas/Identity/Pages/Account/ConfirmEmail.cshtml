@page
@model ConfirmEmailModel
@{
    Layout = "_LayoutClean";
    ViewData["Title"] = "Confirm email";
}

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4 py-4">
        <section>
            <h2 class="text-center logo-sub py-4">OmniCon</h2>
            <h3 class="text-center">@ViewData["Title"]</h3>

            <div class="alert alert-info text-center">
                @Model.StatusMessage
            </div>

            <div class="text-center">
                <a href="/Identity/Account/Login" class="btn btn-primary w-50">Back to Login</a>
            </div>
        </section>
    </div>
    <div class="col-md-4"></div>
</div>
