@page
@model ResetPasswordConfirmationModel
@{
    Layout = "_LayoutClean"; // Using the same clean layout for consistency
    ViewData["Title"] = "Reset password confirmation";
}

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4 py-4">
        <section>
            <h2 class="text-center logo-sub py-4">OmniCon</h2>
            <h3 class="text-center">@ViewData["Title"]</h3>

            <p class="text-center">
                Your password has been reset successfully.
            </p>

            <div class="text-center py-5">
                <a href="/Identity/Account/Login" class="btn btn-primary w-50">Log In</a>
            </div>
        </section>
    </div>
    <div class="col-md-4"></div>
</div>
