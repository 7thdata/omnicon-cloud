@using wppCms.Areas.FileSharings.Models
@model FileSharingsHomeFilesViewModel
@{
    ViewData["Title"] = "Files";
    Layout = "~/Areas/FileSharings/Views/Shared/_Layout.cshtml";
}
<div class="container mt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }
    <div class="d-flex justify-content-between">
        <div>
            <h2>Box: @Model.BoxId</h2>
        </div>
        <div>
            <button type="button" class="btn btn-success mb-3" data-bs-toggle="modal" data-bs-target="#uploadModal">
                Upload New File
            </button>
        </div>
    </div>
 

    <p>
        Welcome, @Model.CurrentUser.NickName (@Model.CurrentUser.Email)
    </p>

    <form method="get" asp-route-culture="@Model.Culture" asp-route-boxId="@Model.BoxId" class="mb-4">
        <input type="text" name="search" value="@Model.Files.Keyword" placeholder="Search files..." class="form-control" />
        <input type="hidden" name="sort" value="@Model.Files.Sort" />
        <input type="hidden" name="currentPage" value="1" />
        <input type="hidden" name="itemsPerPage" value="@Model.Files.ItemsPerPage" />
        <button type="submit" class="btn btn-primary mt-2">Search</button>
    </form>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>File Owner</th>
                <th>File Name</th>
                <th>Uploaded</th>
                <th>Size (KB)</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Files.Items != null && Model.Files.Items.Count > 0)
            {
                foreach (var file in Model.Files.Items)
                {
                    <tr>
                        <td>@file.FileOwner</td>
                        <td>
                            <a href="@file.Location" target="_blank">
                                @System.IO.Path.GetFileName(file.Location)
                            </a>
                        </td>
                        <td>@file.UploadedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@(file.FileSize / 1024)</td>
                        <td>
                            <a class="btn btn-sm btn-primary" href="@file.Location" download>Download</a>
                            @* Delete button (optional) *@
                            @* <a class="btn btn-sm btn-danger" asp-action="DeleteFile" asp-route-id="@file.Id">Delete</a> *@
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">No files found.</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="d-flex justify-content-between align-items-center">
        <div>
            Showing page @Model.Files.CurrentPage of @Model.Files.TotalPages
        </div>
        <div>
            <form method="get" asp-route-culture="@Model.Culture" asp-route-boxId="@Model.BoxId" class="d-inline">
                <input type="hidden" name="search" value="@Model.Files.Keyword" />
                <input type="hidden" name="sort" value="@Model.Files.Sort" />
                <input type="hidden" name="itemsPerPage" value="@Model.Files.ItemsPerPage" />
                <input type="hidden" name="currentPage" value="@(Model.Files.CurrentPage - 1)" />
                <button type="submit" class="btn btn-outline-primary" @(Model.Files.CurrentPage <= 1 ? "disabled" : "")>Prev</button>
            </form>

            <form method="get" asp-route-culture="@Model.Culture" asp-route-boxId="@Model.BoxId" class="d-inline">
                <input type="hidden" name="search" value="@Model.Files.Keyword" />
                <input type="hidden" name="sort" value="@Model.Files.Sort" />
                <input type="hidden" name="itemsPerPage" value="@Model.Files.ItemsPerPage" />
                <input type="hidden" name="currentPage" value="@(Model.Files.CurrentPage + 1)" />
                <button type="submit" class="btn btn-outline-primary" @(Model.Files.CurrentPage >= Model.Files.TotalPages ? "disabled" : "")>Next</button>
            </form>
        </div>
    </div>

    <div class="modal fade" id="uploadModal" tabindex="-1" aria-labelledby="uploadModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form method="post" enctype="multipart/form-data" action="/@Model.Culture/filesharings/upload">
                    <div class="modal-header">
                        <h5 class="modal-title" id="uploadModalLabel">Upload New File</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" name="culture" value="@Model.Culture" />
                        <input type="hidden" name="boxId" value="@Model.BoxId" />
                        <input type="hidden" name="name" value="@Model.CurrentUser.NickName" />
                        <input type="hidden" name="email" value="@Model.CurrentUser.Email" />

                        <div class="mb-3">
                            <label for="uploadFile" class="form-label">Choose File</label>
                            <input class="form-control" type="file" name="uploadFile" id="uploadFile" required>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Upload</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
