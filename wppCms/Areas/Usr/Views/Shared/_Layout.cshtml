<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Google Tag Manager -->
    @if (ViewData["GaTagId"] != null)
    {
        <script>
            (function (w, d, s, l, i) {
                w[l] = w[l] || []; w[l].push({
                    'gtm.start':
                        new Date().getTime(), event: 'gtm.js'
                }); var f = d.getElementsByTagName(s)[0],
                    j = d.createElement(s), dl = l != 'dataLayer' ? '&l=' + l : ''; j.async = true; j.src =
                        'https://www.googletagmanager.com/gtm.js?id=' + i + dl; f.parentNode.insertBefore(j, f);
            })(window, document, 'script', 'dataLayer', '@ViewData["GaTagId"]');</script>
        <!-- End Google Tag Manager -->
    }
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OminiCon User Dashboard</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">


    <!-- Google Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Google Tag Manager (noscript) -->
    @if (ViewData["GaTagId"] != null)
    {
        <noscript>
            <iframe src="https://www.googletagmanager.com/ns.html?id=@ViewData["GaTagId"]"
                    height="0" width="0" style="display:none;visibility:hidden"></iframe>
        </noscript>
    }
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="/en/usr">OmniCon User Panel</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/en/usr">
                                <span class="material-icons material-symbols-outlined" style="margin-right: 5px;">
                                    article
                                </span>
                                Articles
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/en/usr/authors">
                                <span class="material-icons material-symbols-outlined" style="margin-right: 5px;">
                                    person
                                </span>
                                Authors
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/en/usr/storage">
                                <span class="material-icons material-symbols-outlined" style="margin-right: 5px;">
                                    storage
                                </span>
                                Storage
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/en/usr/settings">
                                <span class="material-icons material-symbols-outlined" style="margin-right: 5px;">
                                    settings
                                </span>
                                Settings
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/en/usr/analytics">
                                <span class="material-icons material-symbols-outlined" style="margin-right: 5px;">
                                    analytics
                                </span>
                                Analytics
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/en/usr/usermanagement">
                                <span class="material-icons material-symbols-outlined" style="margin-right: 5px;">
                                    person
                                </span>
                                User Management
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <main role="main" class="container mt-5">
        @RenderBody()
    </main>

    <footer class="footer mt-auto py-3 bg-light">
        <div class="container text-center">
            <span>&copy; 2023 - @DateTime.Now.Year OminiCon by SEVENTH DATA Inc.</span>
        </div>
    </footer>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.3.min.js"
            integrity="sha256-pvPw+upLPUjgMXY0G+8O0xUf+/Im1MZjXxxgOcBQBXU=" crossorigin="anonymous"></script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
