@using wppCms.Areas.Usr.Models
@model UsrOrganizationCreateViewModel
@{
    ViewData["Title"] = "Create New Organization";
    Layout = "~/Areas/Usr/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center">
        <h1>Create Organization</h1>
    </div>
    <hr />
    <form action="/@Model.Culture/usr/organization/upsert" method="post" class="needs-validation" novalidate>
        @Html.AntiForgeryToken()
        <input type="hidden" name="organizationId" value="@Model.Organization.OrganizationId" />
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="organizationName" class="form-label">Organization Name</label>
                <input type="text" class="form-control" id="organizationName" name="organizationName" value="@Model.Organization.OrganizationName" required />
            </div>
            <div class="col-md-6">
                <label for="organizationType" class="form-label">Organization Type</label>
                <select class="form-control" id="organizationType" name="organizationType" required>
                    <option value="" disabled selected>Select an organization type</option>
                    <option value="Corporate">Corporate</option>
                    <option value="Non-Profit" )>Non-Profit</option>
                    <option value="Government" )>Government</option>
                    <option value="Educational" )>Educational</option>
                    <option value="Other" )>Other</option>
                </select>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-12">
                <label for="organizationDescription" class="form-label">Description</label>
                <textarea class="form-control" id="organizationDescription" name="organizationDescription" rows="4">@Model.Organization.OrganizationDescription</textarea>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="organizationLogo" class="form-label">Logo URL</label>
                <input type="url" class="form-control" id="organizationLogo" name="organizationLogo" value="@Model.Organization.OrganizationLogo" />
            </div>
            <div class="col-md-6">
                <label for="organizationWebsite" class="form-label">Website</label>
                <input type="url" class="form-control" id="organizationWebsite" name="organizationWebsite" value="@Model.Organization.OrganizationWebsite" />
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="organizationEmail" class="form-label">Email</label>
                <input type="email" class="form-control" id="organizationEmail" name="organizationEmail" value="@Model.Organization.OrganizationEmail" required />
            </div>
            <div class="col-md-6">
                <label for="organizationPhone" class="form-label">Phone</label>
                <input type="tel" class="form-control" id="organizationPhone" name="organizationPhone" value="@Model.Organization.OrganizationPhone" />
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="organizationAddress" class="form-label">Address</label>
                <input type="text" class="form-control" id="organizationAddress" name="organizationAddress" value="@Model.Organization.OrganizationAddress" />
            </div>
            <div class="col-md-6">
                <label for="organizationCity" class="form-label">City</label>
                <input type="text" class="form-control" id="organizationCity" name="organizationCity" value="@Model.Organization.OrganizationCity" />
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-4">
                <label for="organizationState" class="form-label">State</label>
                <input type="text" class="form-control" id="organizationState" name="organizationState" value="@Model.Organization.OrganizationState" />
            </div>
            <div class="col-md-4">
                <label for="organizationCountry" class="form-label">Country</label>
                <input type="text" class="form-control" id="organizationCountry" name="organizationCountry" value="@Model.Organization.OrganizationCountry" required />
            </div>
        </div>
        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary">Save Organization</button>
        </div>
    </form>
</div>