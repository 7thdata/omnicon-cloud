@using wppCms.Areas.Usr.Models
@model UsrArticles_ArticlesViewModel

@if (Model.Articles.TotalItems > 0)
{
    @foreach (var article in Model.Articles.Items)
    {
        <div class="d-flex my-2 border-bottom p-2 w-100">
            <div class="pe-2">
                @if (!string.IsNullOrEmpty(article.MainImageUrl))
                {
                    <img src="@article.MainImageUrl" style="width:150px;" />
                }
            </div>
            <div class="w-100">
                <div class="d-flex justify-content-between">
                    <div>
                        <i class="fa-regular fa-folder fa-fw"></i> @article.Folders
                    </div>
                    <div>
                        <i class="fa-solid fa-language"></i> @article.Culture
                    </div>
                </div>
                <div>
                    <a href="/@Model.Culture/usr/channel/@Model.ChannelId/article/details/@article.RowKey">@article.PermaName</a>
                </div>
                <div class="d-flex">
                    @if (article.IsSearchable)
                    {
                        <div>
                            <i class="fa-brands fa-searchengin fa-fw"></i>
                        </div>
                    }
                    <div>
                        <h4>@article.Title</h4>
                    </div>
                </div>
                <div class="font-sm">
                    @article.Description
                </div>
                <div class="my-2">
                    @if(!string.IsNullOrEmpty(article.Tags)){
                        var tags = article.Tags.Split(",");
                        foreach(var tag in tags){
                            <span class="badge rounded-pill text-bg-secondary">@tag</span>
                        }
                    }
                </div>
                <div>
                    <i class="fa-solid fa-calendar fa-fw"></i> @article.PublishSince?.ToString("yyyy-MM-dd")
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="p-3 text-center">
        No articles found.
    </div>

}